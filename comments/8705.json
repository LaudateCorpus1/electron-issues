    "body": "hi, @zcbenz :\r\nipcMain.on('asynchronous-message', (event, arg) => {\r\n  if (win) {\r\n    win.close()\r\n  }\r\n  win = new BrowserWindow({\r\n    backgroundColor: '#000000',\r\n    fullscreen: true,\r\n    autoHideMenuBar: true,\r\n    alwaysOnTop: appCfg.ALWAYS_ON_TOP,\r\n    webPreferences: {\r\n      plugins: true,\r\n      javascript: true,\r\n      webSecurity: false,\r\n      allowRunningInsecureContent: true,\r\n      allowDisplayingInsecureContent: true\r\n    }\r\n  })\r\n  win.on('show', (event, arg) => {\r\n    autoShow()\r\n  })\r\n\r\n  function autoShow() {\r\n    event.sender.send('asynchronous-ping', 'AutoShow')\r\n\r\n  }\r\n\r\n  //当打开的应用自动关闭的时候，发送指令status=ok\r\n  win.on('closed', (event, arg) => {\r\n    win = null\r\n    autoClose()\r\n  })\r\n\r\n  function autoClose() {\r\n    event.sender.send('asynchronous-ping', 'AutoClose')\r\n  }\r\n\r\n\r\n\r\n  // win.setAlwaysOnTop(true)\r\n  win.setMovable(false)\r\n  win.setResizable(false)\r\n  console.log(new Date() + 'open rendered window: ' + win.id)\r\n  win.loadURL(arg)\r\n  event.sender.send('asynchronous-reply', 'pong')\r\n})\r\n"
